nav.navbar.navbar-default
	div.container-fluid
		div.navbar-header
			a(href='/')
				img#logo(src='/static/img/logo.svg')
		div#navbar.navbar-collapse.collapse
			ul.nav.navbar-nav.navbar-right
				li(ng-show="showUpload")
					img(src='static/img/phase-one/preview.png', ng-click="upload()").btn
				li(ng-show="showPublish")
					img(src='static/img/phase-one/publish.png', ng-click="publish()")#publish.btn
				li
					img.profile(src='{{user.picture_url}}')
				li.dropdown
					a(href='#', data-toggle='dropdown',
					role='button', aria-haspopup='true', aria-expanded="false").dropdown-toggle {{user.username}}
						span.caret
					ul.dropdown-menu
						li
							a(href='/profile') Profile
						li
							a(href='/contact') Feedback
						li
							a(href='/logout') Logout
